<h2 class="mb-4">Edit Movie</h2>

<div class="card shadow-sm p-4">
    <form action="/admin/edit-movie/<%= movie._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control" value="<%= movie.title %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Language</label>
            <input type="text" name="language" class="form-control" value="<%= movie.language %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input type="text" name="genre" class="form-control" value="<%= movie.genre %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select name="category" class="form-select" required>
                <option value="now-showing" <%= movie.category === "now-showing" ? "selected" : "" %>>Now Showing</option>
                <option value="coming-soon" <%= movie.category === "coming-soon" ? "selected" : "" %>>Coming Soon</option>
                <option value="premiere" <%= movie.category === "premiere" ? "selected" : "" %>>Premiere</option>
                <option value="recommended" <%= movie.category === "recommended" ? "selected" : "" %>>Recommended</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Current Poster:</label>
    <% if (movie.posterImage) { %>
        <img src="<%= movie.posterImage %>" alt="Poster" width="150">
    <% } %>
    <input type="file" name="posterImage" accept="image/*">

    <label>Current Banner:</label>
    <% if (movie.bannerImage) { %>
        <img src="<%= movie.bannerImage %>" alt="Banner" width="200">
    <% } %>
    <input type="file" name="bannerImage" accept="image/*">
        </div>



        <div class="mb-3">
            <label class="form-label">Change Poster</label>
            <input type="file" name="image" class="form-control" accept="image/*">
        </div>

        <button type="submit" class="btn btn-warning w-100">Update Movie</button>
    </form>
</div>
