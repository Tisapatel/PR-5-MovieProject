<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            background-color: #f8f9fa;
        }

        /* Sidebar placeholder */
        .sidebar {
            width: 220px;
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            background-color: #1e1f29;
            color: white;
            padding-top: 20px;
        }
        .sidebar a {
            display: block;
            padding: 12px 20px;
            color: white;
            text-decoration: none;
            margin-bottom: 5px;
            border-radius: 6px;
        }
        .sidebar a:hover {
            background-color: #343a40;
        }

        /* Main content */
        .main-content {
            margin-left: 220px;
            width: calc(100% - 220px);
            padding: 20px;
        }

        .table thead th {
            vertical-align: middle;
        }
        .table tbody tr:hover {
            background-color: #f1f3f6;
        }
        .movie-img, .banner-img {
            border-radius: 6px;
            object-fit: cover;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        @media (max-width: 992px) {
            .main-content {
                margin-left: 0;
                width: 100%;
                padding: 10px;
            }
            .sidebar {
                display: none;
            }
            table {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center mb-4">Admin Panel</h4>
        <a href="/admin">Dashboard</a>
        <a href="/admin/add-movie">Add Movie</a>
        <a href="/admin/movies">Manage Movies</a>
        <a href="/">Back to Site</a>
    </div>

    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>All Movies</h2>
            <a href="/admin/add-movie" class="btn btn-success">+ Add Movie</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>#</th>
                            <th>Poster</th>
                            <th>Banner</th>
                            <th>Title</th>
                            <th>Language</th>
                            <th>Genre</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% if (movies.length === 0) { %>
                            <tr>
                                <td colspan="8" class="text-muted">No movies found</td>
                            </tr>
                        <% } else { %>
                            <% movies.forEach((movie, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <% if(movie.posterImage){ %>
                                            <img src="<%= movie.posterImage %>" class="movie-img" width="80" height="100">
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if(movie.bannerImage){ %>
                                            <img src="<%= movie.bannerImage %>" class="banner-img" width="120" height="60">
                                        <% } %>
                                    </td>
                                    <td><%= movie.title %></td>
                                    <td><%= movie.language %></td>
                                    <td><%= movie.genre %></td>
                                    <td><%= movie.category %></td>
                                    <td>
                                        <a href="/admin/edit-movie/<%= movie._id %>" class="btn btn-warning btn-sm mb-1">Edit</a>
                                        <form action="/admin/delete-movie/<%= movie._id %>" method="POST" style="display:inline-block;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
