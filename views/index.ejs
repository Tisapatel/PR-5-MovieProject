<!doctype html>
<html lang="en">

<head>
  <title>BookMyShow Clone</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
</head>

<body>
  <!-- HEADER -->
  <header>
    <%- include('./partials/header') %>
  </header>

  <main>
    <!-- Banner Carousel -->
    <section class="container-fluid mt-3 px-0">
      <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="1900">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/homebanner.avif" class="d-block w-100 rounded" alt="Banner">
          </div>
          <div class="carousel-item">
            <img src="/images/banner-1.avif" class="d-block w-100 rounded" alt="Banner 2">
          </div>
          <div class="carousel-item">
            <img src="/images/banner-2.avif" class="d-block w-100 rounded" alt="Banner 3">
          </div>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>

        <!-- Indicators -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active"></button>
          <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
          <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
        </div>
      </div>
    </section>

    <!-- Recommended Movies -->
    <section class="container my-5">
      <h3 class="fw-bold mb-3">Recommended Movies</h3>
      <div class="row">
        <% recommendedMovies.forEach(movie=> { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
            <a href="/movie-details/<%= movie._id %>" class="text-decoration-none text-dark">
              <div class="card h-100 shadow-sm">
                <img src="<%= movie.posterImage %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                  <h6 class="fw-bold"><%= movie.title %></h6>
                  <p class="text-muted small"><%= movie.genre %></p>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Stream Banner -->
    <section class="container-fluid my-4">
      <div class="stream-banner text-center">
        <img src="/images/stream.avif" class="img-fluid w-100 rounded" alt="BookMyShow Stream">
      </div>
    </section>

    <!-- Live Events -->
    <section class="container my-5">
      <h4 class="fw-bold mb-4">The Best Of Live Events</h4>
      <div class="row g-3">
        <% const liveEvents=['/images/event-1.avif','/images/event-2.avif','/images/event-3.avif','/images/event-4.avif','/images/event-5.avif','/images/event-6.avif']; %>
        <% liveEvents.forEach(event=> { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-2">
            <div class="card h-100 border-0 shadow-sm rounded-3 text-center">
              <img src="<%= event %>" class="card-img-top rounded" alt="Event">
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Premiere Movies -->
    <section class="container-fluid my-5" style="background-color:#2c334b;">
      <div class="container">
        <img src="/images/premiere-icon.avif" alt="Premiere Logo" class="mb-3 mt-3" style="height:95px;">
        <h4 class="text-white mb-1">Premieres</h4>
        <p class="text-light">Brand new releases every Friday</p>
        <div class="row">
          <% premiereMovies.forEach(movie=> { %>
            <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
              <a href="/movie-details/<%= movie._id %>" class="text-decoration-none">
                <div class="card bg-transparent border-0 shadow-none h-100">
                  <img src="<%= movie.posterImage %>" class="card-img-top" alt="<%= movie.title %>">
                  <div class="card-body bg-transparent text-white">
                    <h6 class="fw-bold"><%= movie.title %></h6>
                    <p class="small mb-0"><%= movie.language %></p>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Music Studio -->
    <section class="container my-5">
      <h3 class="fw-bold mb-3">Music Studio</h3>
      <div class="row">
        <% musicStudio.forEach(movie=> { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
            <a href="/movie-details/<%= movie._id %>" class="text-decoration-none text-dark">
              <div class="card h-100 shadow-sm">
                <img src="<%= movie.posterImage %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                  <h6 class="fw-bold"><%= movie.title %></h6>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Outdoor Events -->
    <section class="container my-5">
      <h3 class="fw-bold mb-3">Outdoor Events</h3>
      <div class="row">
        <% outdoorEvents.forEach(movie=> { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
            <a href="/movie-details/<%= movie._id %>" class="text-decoration-none text-dark">
              <div class="card h-100 shadow-sm">
                <img src="<%= movie.posterImage %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                  <h6 class="fw-bold"><%= movie.title %></h6>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Popular Events -->
    <section class="container my-5">
      <h3 class="fw-bold mb-3">Popular Events</h3>
      <div class="row">
        <% popularEvents.forEach(movie=> { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
            <a href="/movie-details/<%= movie._id %>" class="text-decoration-none text-dark">
              <div class="card h-100 shadow-sm">
                <img src="<%= movie.posterImage %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                  <h6 class="fw-bold"><%= movie.title %></h6>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

  </main>

  <!-- FOOTER -->
  <%- include('./partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    crossorigin="anonymous"></script>
</body>
</html>
